<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin">

  <com.github.salimkayabasi.dialogspinner.DialogSpinner
    android:id="@+id/spinner_empty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <com.github.salimkayabasi.dialogspinner.DialogSpinner
    android:id="@+id/spinner_cities"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <com.github.salimkayabasi.dialogspinner.DialogSpinner
    android:id="@+id/spinner_numbers"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dspinner_title="Choose a number"
    app:dspinner_title_color="@color/red"/>

  <com.github.salimkayabasi.dialogspinner.DialogSpinner
    android:id="@+id/spinner_foods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dspinner_hint="Feeling so hungry?"/>

  <com.github.salimkayabasi.dialogspinner.DialogSpinner
    android:id="@+id/spinner_multi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dspinner_hint="I want more"
    app:dspinner_negative_text="decline"
    app:dspinner_positive_text="I got"
    app:dspinner_title="More then one"
    app:dspinner_type="checkbox"/>

</LinearLayout>